<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Demo" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Demo" parent="Base.Theme.Demo" />

    <style name="base_font">
        <item name="android:textColor">@color/black</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="base_button" parent="text_semi_bold_16">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="font_regular" parent="base_font">
        <item name="android:fontFamily">@font/rubik_regular</item>
    </style>

    <style name="text_regular_16" parent="font_regular">
        <item name="android:textSize">16sp</item>"
    </style>

    <style name="text_regular_14" parent="font_regular">
        <item name="android:textSize">14sp</item>"
    </style>

    <style name="edit_text_regular_16" parent="text_regular_16">
        <item name="android:maxLines">1</item>
        <item name="android:background">@drawable/bg_text_input</item>
    </style>

    <style name="font_semi_bold" parent="base_font">
        <item name="android:fontFamily">@font/rubik_semibold</item>
    </style>

    <style name="text_semi_bold_24" parent="font_semi_bold">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="text_semi_bold_16" parent="font_semi_bold">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text_semi_bold_12" parent="font_semi_bold">
        <item name="android:textSize">12sp</item>
    </style>

</resources>